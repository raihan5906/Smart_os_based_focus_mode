{
  "manifest_version": 3,
  "name": "Smart OS Focus Manager(Edge)",
  "version": "1.0",
  "description": "Closes distracting tabs during study time",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_inject.js"],
      "run_at": "document_idle"
    }
  ]
}
